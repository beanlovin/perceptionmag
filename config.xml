        <icon src="icon144.png" width="144" height="144" />
        <icon src="icon57.png" width="57" height="57" />
		<splash src="splash1242.png" width="1242" height="2208" /> 
		<splash src="splash750.png" width="750" height="1334" /> 
		<splash src="splash640.png" width="640" height="1136" /> 
