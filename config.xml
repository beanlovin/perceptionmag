<access origin="http://perceptionmagazine.co.uk" subdomains="true" />
<access origin="http://litesoft.co.uk" subdomains="true" />
<access origin="*" />
<access origin=".*" />
            <allow-navigation href="*" />
    <allow-intent href="*" />
        <allow-navigation href="http://*/*" />
<allow-intent href="https://*/*" />
</widget>